@model ASSESSMENT_DR2_JESSICAGALHARDI.Views.Friends.CreateModel

@{
}

<br />
<br />

<div>
    <font size="+2" >
        <p align="center" style="font-family:'Lucida Bright'"> Add a new contact to your friends list: </p>
    </font>

</div>

<center>

    <form method="post" action="/Friends/CreateResult" style="font-family:'Lucida Bright'">

        @Html.AntiForgeryToken()

        <div class="form-group">

            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Name:</label>
                <input type="text" name="Name" class="form-control" placeholder="First Name">
            </div>

            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Last Name:</label>
                <input type="text" name="LastName"  class="form-control" placeholder="Last Name">
            </div>

            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Birth Day(dd/mm):</label>
                <input type="text" name="BirthDate"  class="form-control" placeholder="Birth Day">
            </div>

        </div>

        <br />
        <br />

        <input class="btn btn-primary" type="submit" value="Send" />
        <span> &nbsp;  </span>
        <input class="btn btn-primary" type="button" value="Return" onclick="window.location.href ='@Url.Action("List","Friends")'" />





    </form>
</center>




