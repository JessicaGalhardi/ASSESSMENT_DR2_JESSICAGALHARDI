@model List<FriendXY.Models.Friend>

@{
}


<br />
<br />



<form method="post" action="/Friends/Search/@Model">

    @Html.AntiForgeryToken()
    <center>
    <p>

            <form class="d-flex">
                <input class="form-control me-sm-2" type="text" placeholder="Search" name="Name">
                <br />
                <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
            </form>

     

        </p>
    </center>

    <br />

    <div>
        <font size="+2">
            <p align="center" > Friends list: </p>
        </font>

    </div>

</form>

<br />


<table class="table" style="font-family:'Lucida Bright'">
    <thead>
        <tr>
            <td align="center" >Contact Id</td>
            <td align="center" >Name</td>
            <td align="center" >Last Name</td>
            <td align="center" >Birth Date</td>
            <td align="center">Actions</td>

        </tr>
    </thead>
    <tbody>

        @{
            foreach (var friendX in Model)
            {

                <tr>


                    <td align="center">
                        @Html.DisplayFor(modelItem => friendX.Id)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => friendX.Name)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => friendX.LastName)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => friendX.Birthday)
                    </td>
                    <td align="center">

                        @Html.ActionLink("Details", "Details","Friends",new {Id = friendX.Id})
                        @Html.ActionLink("Update", "Update","Friends",new {Id = friendX.Id})
                        @Html.ActionLink("Delete","Delete","Friends",new {Id = friendX.Id},new {onclick= "return confirm('Are you sure you want delete this person from your contacts?')"})
                     

                    </td>
                </tr>


            }
        }
    </tbody>



</table>

<center>


    @Html.ActionLink("New Contact","Create","Friends") 


</center>
<br />

<center>

    <input class="btn btn-primary" type="button" value="Return" onclick="window.location.href ='@Url.Action("Home","Friends")'" />

</center>
   